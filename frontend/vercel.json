{
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_DEV_MODE": "false"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_DEV_MODE": "false"
    }
  },
  "functions": {
    "app/auth/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, no-cache"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/auth/:provider*",
      "destination": "/api/auth/:provider*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/[...auth]"
    }
  ]
}