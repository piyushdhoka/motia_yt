# Production Environment Variables Template
# Copy this file to .env.production.local on your production server
# DO NOT commit .env.production.local to git

# Clerk Authentication - PRODUCTION KEYS
# Get these from: https://dashboard.clerk.com/ -> Switch to Production
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_SECRET_KEY

# Clerk Dashboard URLs (same for production)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Backend API Configuration - UPDATE TO YOUR PRODUCTION BACKEND
NEXT_PUBLIC_BACKEND_URL=https://api.yourdomain.com

# Production settings
NEXT_PUBLIC_DEV_MODE=false
NODE_ENV=production
